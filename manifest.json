{
  "manifest_version": 3,
  "name": "Jira Log Time",
  "version": "1.2.1",
  "description": "Log your daily time in seconds!",
  "host_permissions": [
    "<all_urls>"
  ],
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_icon": "jira_logo.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
